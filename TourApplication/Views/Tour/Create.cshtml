@model TourApplication.Models.TourModel

@{
    ViewBag.Title = "Create";
}

<style>
    .jumbotron {

        background-image: url("@Url.Content("~/content/images/ski-rando.jpg")");
        background-size: cover;
        background-position: center;
        height: 450px;
        color: #ffffff;
        text-color: black;
        padding: 100px 25px;
        margin:0px;
    }


    .bg-grey {
        background-color: #f6f6f6;
    }

    .container-fluid {
        padding: 60px 50px;
    }
</style>

<div id="login" class="jumbotron text-center">
    <h1>We need you!</h1>
    <p>Help us by contributing acitivites </p>
    <form class="form-inline">
    

    </form>
</div>

  
<center>
    <div id="tours" class="container-fluid">
        <div class="form-group-lg">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>

                <div class="form-group">
                    <label for="Type">Type</label>
                    <select class="form-control" id="type" name="type">
                        <option>Klippklättring</option>
                        <option>Topptur Vinter</option>
                        <option>Alpin klättring</option>
                        <option>Vandring</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="comments" rows="5" required></textarea>
                </div>

                <div class="form-group">
                    <label for="Type">Difficulty</label>
                    <select class="form-control" id="difficulty" name="difficulty">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                        <option>8</option>
                        <option>9</option>
                        <option>10</option>
                    </select>
                </div>

                <div class="form-inline">

                </div>
                <label for="Name">Position</label>
                <div class="form-inline">

                    <input class="form-control" id="name" name="x" placeholder="X" type="number" min="-180" max="180" step="any" required>
                    
                    <input  class="form-control" id="name" name="y" type="number" min="-180" max="180" placeholder="Y" step="any" required>
                    <br />
                    <small>Ex: 62.67638</small>
                </div>
                <br />
                <br />
                <div class="form-group">
                    
                        <input type="submit" value="Create" class="btn btn-default" />
                
                </div>


            }


        </div>

    </div>
</center>

 